<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  <title>Users</title>
</head>
<body>

  <div class="container-fluid p-0">

    <div class="title">
      <h1>Users</h1>
    </div>

    <nav class="sidenav">
      <a href="/">Dashboard</a>
      <a href="/users">Users</a>
      <a href="/inventory">Inventory</a>
    </nav>


    <div class="main">
    <!-- Buttons aligned vertically in the top-right corner -->


    <div class="button-container">
      <button class = "btn btn-dark" type="button" id="NewUserBtn" onclick="showEditor('NewUserBtn')">New User</button>

    </div>
    

    <!-- Editor container -->



    
    <div class="user_table">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <td>User ID</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Edit</td>
            <td>Delete</td>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i< User.length;i++) { %>

          <tr>
            <td><%= User[i].userID %></td>
            <td><%= User[i].firstName %></td>
            <td><%= User[i].lastName %></td>
            <td><a href="/users/edit?_id=<%= User[i]._id %>">Edit</a></td>
            <td><a href="/users/delete?_id=<%= User[i]._id %>">Delete</a></td>



          </tr>
          <% } %>

        </tbody>

      </table>
      

    </div>
                <!-- Editor container -->
                <div id="overlay"></div>
                <div id="editor-container">
                  <h2>Edit/Add Item</h2>
                  <!-- Add your form elements for editing/adding data -->
                  <label for="itemName">Item Name:</label>
                  <input type="text" id="itemName" name="itemName">
            
                  <label for="itemQuantity">Quantity:</label>
                  <input type="number" id="itemQuantity" name="itemQuantity">
            
                  <button onclick="saveAndClose()">Save</button>
                  <button onclick="closeEditor()">Cancel</button>
                </div>

    <script src="javascripts/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    


  </div>

</body>
</html>
